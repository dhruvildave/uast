{
  "name": "uast",
  "version": "2.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "docker": "docker buildx build --no-cache --pull --compress -t uast . && docker system prune -f",
    "podman": "podman build --no-cache --pull --compress -t uast . && podman system prune -f",
    "start": "sirv public --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write --plugin-search-dir=. \"**/*.{html,ts,svelte,json,md,svg}\""
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.51.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "sirv-cli": "^2.0.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "svelteStrictMode": true,
    "svelteIndentScriptAndStyle": true,
    "svelteSortOrder": "options-styles-scripts-markup",
    "singleQuote": true,
    "jsxSingleQuote": true
  }
}
