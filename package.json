{
  "name": "uast",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "docker": "docker buildx build --no-cache --pull --compress -t uast . && docker system prune -f",
    "podman": "podman build --no-cache --pull --compress -t uast . && podman system prune -f",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write \"**/*.{html,ts,svelte,json,md,svg}\""
  },
  "devDependencies": {
    "@fontsource/ibm-plex-mono": "^4.5.12",
    "@fontsource/noto-serif-devanagari": "^4.5.13",
    "@fontsource/noto-serif-gujarati": "^4.5.11",
    "@sveltejs/vite-plugin-svelte": "^1.1.0",
    "@tsconfig/svelte": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "svelteStrictMode": true,
    "svelteIndentScriptAndStyle": true,
    "svelteSortOrder": "options-styles-scripts-markup",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "pluginSearchDirs": [
      "."
    ],
    "overrides": [
      {
        "files": "*.svg",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
