{
  "name": "uast",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev --host",
    "d": "vite dev --host",
    "build": "vite build",
    "b": "vite build",
    "preview": "vite preview --host",
    "start": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "install": "svelte-kit sync",
    "lint": "prettier -c \"**/*.{html,css,json,svg,ts,svelte,js,md,yml}\"",
    "format": "prettier -w \"**/*.{html,css,json,svg,ts,svelte,js,md,yml}\"",
    "docker": "docker compose build && docker system prune -f",
    "podman": "podman-compose build && podman system prune -f"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.7",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.5"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2"
  },
  "type": "module",
  "engineStrict": true,
  "prettier": {
    "useTabs": false,
    "svelteStrictMode": true,
    "arrowParens": "avoid",
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 80,
    "svelteSortOrder": "scripts-markup-styles-options",
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      },
      {
        "files": "*.svg",
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
